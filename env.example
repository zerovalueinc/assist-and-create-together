# PersonaOps Environment Variables
# Copy this file to .env and fill in your actual API keys

# === REQUIRED FOR ICP GENERATION (Claude via OpenRouter) ===
OPENROUTER_API_KEY=your-openrouter-api-key-here   # Claude 3.5 Sonnet via OpenRouter (required for ICP generation)

# === REQUIRED FOR LEAD GENERATION (Apollo) ===
APOLLO_API_KEY=your-apollo-api-key-here           # Apollo.io API key (required for lead search)

# === REQUIRED FOR LEAD ENRICHMENT (Web Crawler) ===
# Web crawling is now handled by OpenRouter's web search tools
# No additional API key needed - uses OPENROUTER_API_KEY

# === REQUIRED FOR UPLOAD TO INSTANTLY ===
INSTANTLY_API_KEY=your-instantly-api-key-here     # Instantly API key (required for uploading leads)
INSTANTLY_LIST_ID=your-instantly-list-id-here     # Instantly list ID (required for uploading leads)

# === GENERAL APP SETTINGS ===
NODE_ENV=development
PORT=3001

# === OPTIONAL ===
# LOG_LEVEL=debug
# MAX_CONCURRENT_REQUESTS=10
# REQUEST_TIMEOUT=30000

# Claude AI Configuration (Optional)
CLAUDE_API_KEY=your_claude_api_key_here

# === OPTIONAL FOR LEAD ENRICHMENT (PhantomBuster) ===
PHANTOMBUSTER_API_KEY=your_phantombuster_api_key_here

# Google Sheets Configuration (Optional)
GOOGLE_SHEETS_CREDENTIALS=path_to_google_credentials.json

# Rate Limiting Configuration
APOLLO_RATE_LIMIT=100
OPENROUTER_RATE_LIMIT=100
INSTANTLY_RATE_LIMIT=100 