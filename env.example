# PersonaOps Environment Variables
# Copy this file to .env and fill in your actual API keys and secrets

# === REQUIRED FOR ICP GENERATION (Claude via OpenRouter) ===
OPENROUTER_API_KEY=your-openrouter-api-key-here   # Claude 3.5 Sonnet via OpenRouter (required for ICP generation)

# === REQUIRED FOR LEAD GENERATION (Apollo) ===
APOLLO_API_KEY=your-apollo-api-key-here           # Apollo.io API key (required for lead search)

# === REQUIRED FOR LEAD ENRICHMENT (Web Crawler) ===
# Web crawling is now handled by OpenRouter's web search tools
# No additional API key needed - uses OPENROUTER_API_KEY

# === REQUIRED FOR UPLOAD TO INSTANTLY ===
INSTANTLY_API_KEY=your-instantly-api-key-here     # Instantly API key (required for uploading leads)
INSTANTLY_LIST_ID=your-instantly-list-id-here     # Instantly list ID (required for uploading leads)

# === GENERAL APP SETTINGS ===
NODE_ENV=development
PORT=3001  # Backend server port

# === DATABASE ===
DATABASE_URL=sqlite:./data/personaops.db

# === JWT Secret (required for backend auth) ===
JWT_SECRET=your-very-strong-random-secret

# === GOOGLE OAUTH (REQUIRED) ===
GOOGLE_CLIENT_ID=195376867036-bf3j1r03nn04cs24uhbpcb5lndju78u5.apps.googleusercontent.com  # Backend Google OAuth
VITE_GOOGLE_CLIENT_ID=195376867036-bf3j1r03nn04cs24uhbpcb5lndju78u5.apps.googleusercontent.com  # Frontend Google OAuth

# === FRONTEND URL (for email links, OAuth, etc) ===
FRONTEND_URL=http://localhost:3000

# === EMAIL/SMTP CONFIGURATION ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-user@gmail.com
SMTP_PASS=your-smtp-app-password
SMTP_FROM=noreply@personaops.com

# === OPTIONAL ===
# LOG_LEVEL=debug
# MAX_CONCURRENT_REQUESTS=10
# REQUEST_TIMEOUT=30000
# Claude AI Configuration (Optional)
CLAUDE_API_KEY=your-claude-api-key-here
# PhantomBuster (Optional)
PHANTOMBUSTER_API_KEY=your-phantombuster-api-key-here
# Google Sheets (Optional)
GOOGLE_SHEETS_CREDENTIALS=path_to_google_credentials.json
# Rate Limiting
APOLLO_RATE_LIMIT=100
OPENROUTER_RATE_LIMIT=100
INSTANTLY_RATE_LIMIT=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100